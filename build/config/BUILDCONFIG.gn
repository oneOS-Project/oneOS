declare_args() {
  is_debug = true
  optimize = true
  objc_support = false
  kernel_symbols = true
  userland_symbols = true
  static_analyze = false
  bench_method = "none"
  host = "gnu"
  llvm_bin_path = getenv("LLVM_BIN_PATH")
  device_type = "desktop"
}

if (target_cpu == "") {
  target_cpu = "x86"
}
if (target_cpu == "arm") {
  target_cpu = "aarch32"
}
if (device_type == "m") {
  device_type = "mobile"
}
if (device_type == "d") {
  device_type = "desktop"
}

if (host == "gnu") {
  set_default_toolchain("//toolchains:gnu-cross-compiler")
}

if (host == "llvm") {
  objc_support = true
  set_default_toolchain("//toolchains:llvm-cross-compiler")
}
